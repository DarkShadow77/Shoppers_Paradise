<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:onClick="Product_Details_Popup"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:id="@+id/order_history_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Order: #324244"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/order_history_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Placed: 12/04/2021"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/iconPrimary"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/order_history_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Total: $ 150.00"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_image"
                android:layout_width="40dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:src="@drawable/forward"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>